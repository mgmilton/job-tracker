<h3> Store a Contact for <%= @contact.company.name %> </h3>

<%= form_for [@company, @contact] do |f| %>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label"><%= f.label :full_name %></label>
      <div class="col-sm-10">
        <%= f.text_field :full_name %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :position %></label>
      <div class="col-sm-10">
        <%= f.text_field :position %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :email %></label>
      <div class="col-sm-10">
        <%= f.text_field :email %>
      </div>
    </div>

    <%= f.submit %>
<% end %>
