<form>
  <%= form_for [@company, @job] do |f| %>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :title %></label>
        <div class="col-sm-10">
          <%= f.text_field :title %>
        </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :description %></label>
      <div class="col-sm-10">
        <%= f.text_field :description %>
      </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label"><%= f.label :level_of_interest %></label>
      <div class="col-sm-10">
        <%= f.number_field :level_of_interest %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :city %></label>
      <div class="col-sm-10">
        <%= f.text_field :city %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :category_id %></label>
      <div class="col-sm-10">
        <%= f.collection_select(:category_id, Category.order(:title), :id, :title) %>
        <%= link_to "Create a New Category", new_category_path %>
      </div>
    </div>

    <%= f.submit %>
  <% end %>
</form>
