<html>
  <h2>All Jobs for <%= @company.name %></h2>
<div class= "container">
    <div class="row">
      <div class="col-md-6">
        <% @company.jobs.each do |job| %>
        <ul><%= link_to job.title, company_job_path(@company, job)%></ul>
        <% end %>

        <ul><%= link_to "Add A Job", new_company_job_path(@company)%></ul> </br>
      </div>
      <div class="col-md-6">
        <h3>Contacts (<%= @company.contacts.size %>)</h3>
        <%= render partial: 'contacts/form' %>
        <%= render partial: 'companies/contact' %>
      </div>
    </div>
  </div>
</html>
